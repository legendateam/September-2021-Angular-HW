{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "indent": ["error", 2],
      "import/prefer-default-export": "off",
      "import/extensions": [
        "error",
        {
          "js": "never",
          "ts": "never"
        }
      ],
      "class-methods-use-this": "off",
      "no-shadow": "off",
      "no-unused-vars": "off",
      "no-underscore-dangle": "off",
      "max-len": ["error", { "code": 140 }],
      "no-empty-function": "off",
      "no-useless-constructor": "off",
      "no-return-assign": "off",
      "no-restricted-globals": "off"
    },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js",".ts"]
      }
    }
  }
}
